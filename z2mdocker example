version: '3.8'
services:
  zigbee2mqtt:
    container_name: zigbee2mqtt
    image: ghcr.io/koenkk/zigbee2mqtt
    restart: unless-stopped
    volumes:
      - [local bind mount]/data:/app/data
      - /run/udev:/run/udev:ro
    ports:
      - "8485:8485"  
      - "8080:8080"  
    environment:
      - TZ=America/New_York
    networks:
      - zigbee_network

networks:
  zigbee_network:
    driver: bridge
